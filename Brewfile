# mange dependencies with brew https://brew.sh/

brew "asdf"             # Extendable version manager with support for Ruby,
                        # Node.js, Erlang & more https://asdf-vm.com/
brew "redis"            # Persistent key-value database, with built-in net
                        # interface https://redis.io/
brew "slides"           # Terminal based presentation tool
                        # https://github.com/maaslalani/slides
brew "tmux"             # Terminal multiplexer https://tmux.github.io/
